---
import logo from "../assets/images/logo.svg";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Analytics Dashboard for The Most Powerful Aggregation Layer in DeFi, UniDex"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="bg-slate-900 bg-[url(/blur.svg)] min-h-screen bg-cover pt-4 px-2"
  >
    <div class="container mx-auto">
      <header
        class="py-3 md:py-5 px-6 md:px-10 rounded-lg outline outline-1 outline-slate-700 bg-opacity-10 bg-slate-500 shadow-lg"
      >
        <a
          href="https://unidex.exchange"
          class="flex items-center w-fit mx-auto md:mx-0"
          rel="noopener noreferrer"
          target="_blank"
        >
          <img src={logo} alt="UniDex Logo" />
          <div class="divider divider-horizontal"></div>
          <p class="uppercase">Analytics</p>
        </a>
      </header>
      <slot />
    </div>
  </body>
</html>
